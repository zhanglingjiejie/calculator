page {
  width: 100%;
  height: 100%;
}
page .navigation {
  width: 100%;
  height: 200rpx;
}
page .navigation .back_btn {
  position: absolute;
  top: 100rpx;
  left: 30rpx;
}
page .navigation .back_btn image {
  width: 60rpx;
  height: 60rpx;
}
page .content {
  width: 100%;
  height: 100%;
  background-color: black;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}
page .content .result_view {
  width: 100%;
  height: 35%;
  position: relative;
}
page .content .result_view .result_box {
  height: 30%;
  text-align: right;
  color: white;
  position: absolute;
  left: 0;
  bottom: 0;
}
page .content .btns_view {
  width: 100%;
  height: 65%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
page .content .btns_view .btn_radius {
  margin-left: 30rpx;
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  border-radius: 60%;
  text-align: center;
  font-size: 60rpx;
  color: white;
  transition: background-color 0.5s ease;
  /* 背景色在0.3秒内平滑过渡 */
}
page .content .btns_view .btn_radius:active {
  transition: background-color 0.1s ease;
  /* 背景色在0.3秒内平滑过渡 */
  background-color: #797979;
  /* 按钮按下时的颜色 */
}
page .content .btns_view .ml-zero {
  margin-left: 0;
}
page .content .btns_view .ft-color {
  color: black;
}
page .content .btns_view .bg-orange {
  background-color: orange;
}
page .content .btns_view .bg-darkgray {
  background: #565656;
}
page .content .btns_view .bg-gray {
  background-color: darkgrey;
}
page .content .btns_view .btn-size2 {
  width: 326rpx;
  border-radius: 75rpx;
}

