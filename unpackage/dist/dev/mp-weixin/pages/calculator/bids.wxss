page {
  background: #fcfdfd;
}
.index_main .navigation {
  width: 100%;
  height: 200rpx;
  background: linear-gradient(to bottom, #0072ff 20%, #ff99cc00 100%);
}
.index_main .navigation .back_btn {
  position: absolute;
  top: 100rpx;
  left: 30rpx;
}
.index_main .navigation .back_btn image {
  width: 60rpx;
  height: 60rpx;
}
.index_main .ca_box .title {
  color: #0072ff;
  text-align: center;
  font-weight: 800;
  padding: 40rpx 0rpx;
  font-family: fangsong;
  font-size: 22px;
}
.index_main .ca_box .ca_compute_box {
  display: flex;
  margin: 20px 0px;
  padding: 5px 45px;
}
.index_main .ca_box .ca_compute_box .left_title {
  display: flex;
  align-items: center;
  width: 140px;
}
.index_main .ca_box .ca_compute_box .right_btn {
  background: #87d5ff;
  text-align: center;
  border-radius: 15px;
  color: #ffffff;
  font-size: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150px;
  height: 30px;
}
.index_main .ca_box .ca_compute_box .right_btn image {
  width: 50rpx;
  height: 50rpx;
  padding-left: 10px;
}
.index_main .ca_box .ca_compute_box .right_input {
  background: #dfe3e4b8;
  text-align: center;
  border-radius: 15px;
  color: #5d5858;
  font-size: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150px;
  height: 30px;
}
.index_main .ca_btn_box {
  display: flex;
  justify-content: center;
}
.index_main .ca_btn_box .item_btn {
  width: 600rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 25px;
  background: #b8d1ff;
  -webkit-transform: scale(1.1);
          transform: scale(1.1);
  box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
  line-height: 90rpx;
}
.index_main .ca_btn_box .item_btn .item_btn_text {
  color: #0f81f7;
}
.index_main .charge {
  width: 100%;
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  font-size: 15px;
  color: #414141;
  margin-top: 20px;
}
.index_main .charge ._span {
  display: flex;
  margin-left: 45px;
}
.index_main .popup_box {
  background-color: #FFF;
  border-radius: 20rpx;
  width: 300rpx;
  height: 400rpx;
  padding: 20px;
}
.index_main .popup_box .popup_compute {
  border-radius: 10rpx;
  margin-bottom: 20px;
}
.index_main .popup_box .popup_compute .compute_single {
  text-align: -webkit-center;
}
.index_main .popup_box .popup_compute .compute_single .span {
  width: 200rpx;
  height: 50px;
  line-height: 50px;
  border-bottom: #00000021 solid 1px;
  border-radius: 10px;
  line-height: 55px;
}
.index_main .popup_box .compute_close .span {
  text-align: -webkit-center;
  line-height: 30px;
  border-radius: 10px;
  background-color: #2196f399;
}

